{{!--
Frequently asked questions
@param {string} [class] - additional class
@param {string} type - message type
@author zkreations
--}}
<b:includable id='m:faq'>
  <p class='alert'>
    <b:class cond='data:class' expr:name='data:class'/>
    <b:with value='"https://zkreations.com/p/faq.html"' var='faqUrl'>
      <b:switch var='data:text'>
        <b:case value='feedsRequired'/>
        This feature requires Blog Feeds to be enabled. <a expr:href='fragment(data:faqUrl,data:text)' rel='nofollow'>How to fix</a>
        <b:case value='publicRequired'/>
        Not available if the blog is private. <a expr:href='fragment(data:faqUrl,data:text)' rel='nofollow'>How to fix</a>
      </b:switch>
    </b:with>
  </p>
</b:includable>
