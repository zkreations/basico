{{!--
Cards Settings
--}}
[number] Number of entries to ignore before lazy loading images.
<Variable name="e.lazyStart" value="2"/>

[string] Aspect ratio of the featured image. (21:9, 16:9, 4:3, 1:1, 1:2, 2:3, 5:7)
<Variable name="e.ratio" value="16:9"/>

[boolean] Show featured image.
<Variable name="e.showImage" value="true"/>

[boolean] Show post meta.
<Variable name="e.showMeta" value="true"/>

[boolean] Show post snippets.
<Variable name="e.showSnippet" value="true"/>

[number] Truncate post snippets to this length.
<Variable name="e.snippetLength" value="360"/>

[number] Truncate text by line number.
<Variable name="e.snippetLines" value="4"/>

[string] Title tag. (h2, h3, h4, h5, h6)
<Variable name="e.titleTag" value="h3"/>
