{{!--
This file contains the variables of the styles declared in the template.
--}}
:root {
  /* Backgrounds */
  --body-background: $(body.background);
  /* Color */
  --primary: $(primary);
  --secondary: $(secondary);
  --body-background-color: $(body.background.color);
  --bg-template: $(bg.template);
  --bg-inset: $(bg.inset);
  --bg-subtle: $(bg.subtle);
  --color-title: $(color.title);
  --color-text: $(color.text);
  --color-subtle: $(color.subtle);
  --color-border: $(color.border);
  --color-header-title: $(color.header.title);
  --color-header-subtitle: $(color.header.subtitle);
  /* Font */
  --font-title: $(font.title);
  --font-title-family: $(font.title.family);
  --font-text: $(font.text);
  --font-text-family: $(font.text.family);
  /* Sizes */
  --width-container: $(width.container);
  --width-sidebar: $(width.sidebar);
  /* Settings */
  --related-min-width: $(p.relatedMinWidth);
  --line-clamp: $(e.snippetLines);
  --toc-text: "$(t.toc)";
  --copy-text: "$(t.copy)";
  --copied-text: "$(t.copied)";
  --show-more-text: "$(t.showMore)";
  --show-less-text: "$(t.showLess)";
}

{{!--
Dark mode variables
--}}
[data-theme="dark"] {
  --primary: $(dark.primary);
  --secondary: $(dark.secondary);
  --body-background-color: $(dark.body.background.color);
  --bg-template: $(dark.bg.template);
  --bg-inset: $(dark.bg.inset);
  --bg-subtle: $(dark.bg.subtle);
  --color-title: $(dark.color.title);
  --color-text: $(dark.color.text);
  --color-subtle: $(dark.color.subtle);
  --color-border: $(dark.color.border);
  --color-header-title: $(dark.color.header.title);
  --color-header-subtitle: $(dark.color.header.subtitle);
}
