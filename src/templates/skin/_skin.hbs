{{!--
Variables b:skin
@author zkreations
@docs https://bloggercode-blogconnexion.blogspot.com/2014/06/tag-b-skin-b-template-skin.html
--}}
<b:if cond="!data:view.isLayoutMode">
  {{!-- Skin (for Customization Mode) --}}
  <b:skin><![CDATA[
  /*!
    * Name      : {{name}}
    * Theme URL : {{theme_uri}}
    * Source    : {{source_uri}}
    * Version   : {{version}}
    * Author    : {{author}}
    * License   : {{license}}
    * Copyright : {{copyright}}
    *//*!

  Admin
  =====================
  {{> setting-admin}}

  General
  =====================
  {{> setting-general}}

  Cards
  =====================
  {{> setting-cards}}

  Posts
  =====================
  {{> setting-posts}}

  Comments
  =====================
  {{> setting-comments}}

  Functions
  =====================
  {{> setting-functions}}

  Translatable strings
  =====================
  {{> setting-text}}

  Customization
  =====================
  {{> Background}}
  {{> Color}}
  {{> Sizes}}
  {{> Font}}
  {{> Hack}}

  Skin CSS variables
  =====================*/
  {{> Vars}}

  /*
  Your custom styles
  =====================*/
  ]]></b:skin>
<b:else/>
  {{!-- Template skin (for Layout Mode) --}}
  <b:template-skin><![CDATA[{{asset '/dist/css/admin.min.css'}}]]></b:template-skin>
</b:if>
{{!-- Assets --}}
<b:include name='m:enqueue'/>
